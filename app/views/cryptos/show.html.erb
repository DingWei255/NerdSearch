<div class="container crypt show" >

  <% for x in @show_crypto %>
    <% if @crypto.symbol.upcase == x["symbol"] %>
      <% crypto_name =  x["name"] %>
      <% crypto_price = x["price_usd"] %>
      <% crypto_rank =  x["rank"] %>
    <% end %>
  <% end %>

  <h2 class="crypt name"><%= crypto_name %></h2>
  
  <p>
  <strong><%= @crypto.symbol.upcase %></strong>
  </p>

  <p>
  <strong>Current Price:</strong> <%= number_to_currency(crypto_price) %>
  </p>

  <p>
  <strong>Rank: </strong> <%= crypto_rank %>
  </p>

  <p>
    <strong>Cost per:</strong>
    <%= @crypto.cost_per %>
  </p>

  <p>
    <strong>Amount owned:</strong>
    <%= @crypto.amount_owned %>
  </p>

</div>

<div class="button-group">
  <%= link_to 'Edit', edit_crypto_path(@crypto), class: "btn btn-primary" %> 
  <%= link_to 'Back', cryptos_path, class: "btn btn-primary" %> 
  <%= link_to 'Delete Crypto', crypto_path(@crypto), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>

